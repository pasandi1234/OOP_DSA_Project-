  </servlet-mapping>

  <servlet>
    <servlet-name>ReviewListServlet</servlet-name>
    <servlet-class>com.hsbt.servlet.ReviewListServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ReviewListServlet</servlet-name>
    <url-pattern>/review-list</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>TutorReviewsServlet</servlet-name>
    <servlet-class>com.hsbt.servlet.TutorReviewsServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>TutorReviewsServlet</servlet-name>
    <url-pattern>/tutor-reviews</url-pattern>
  </servlet-mapping>
</web-app>
