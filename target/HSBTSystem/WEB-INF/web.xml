  </servlet>
  <servlet-mapping>
    <servlet-name>PaymentViewServlet</servlet-name>
    <url-pattern>/view-payment</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>PaymentUpdateServlet</servlet-name>
    <servlet-class>com.hsbt.servlet.PaymentUpdateServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>PaymentUpdateServlet</servlet-name>
    <url-pattern>/update-payment</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>PaymentDeleteServlet</servlet-name>
    <servlet-class>com.hsbt.servlet.PaymentDeleteServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>PaymentDeleteServlet</servlet-name>
    <url-pattern>/delete-payment</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>PaymentListServlet</servlet-name>
    <servlet-class>com.hsbt.servlet.PaymentListServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>PaymentListServlet</servlet-name>
    <url-pattern>/payment-history</url-pattern>
  </servlet-mapping>

  <!-- Review Servlet Mappings -->
  <servlet>
    <servlet-name>ReviewSubmissionServlet</servlet-name>
    <servlet-class>com.hsbt.servlet.ReviewSubmissionServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ReviewSubmissionServlet</servlet-name>
    <url-pattern>/submit-review</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>ReviewViewServlet</servlet-name>
    <servlet-class>com.hsbt.servlet.ReviewViewServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ReviewViewServlet</servlet-name>
    <url-pattern>/view-review</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>ReviewUpdateServlet</servlet-name>
